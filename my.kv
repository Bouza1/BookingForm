<WindowManager>
    loginScreen:    
    dayScreen:

<LoginScreen>
    name: "loginScreen"

    username:usernameInp
    password:passwordInp

    BoxLayout:
        orientation:"vertical"

        BoxLayout:
            orientation:'vertical'
            padding:20

            Image:
                source:"logo.png"
            
            Label:
                text:"Winterborne Stickland Tennis Club"
                color: rgba("#AFBFC0ff")
                size_hint: 1, 0.4
                pos_hint:{"top":1}

        BoxLayout:
            orientation:"vertical"
            spacing: 
            padding:
            
            BoxLayout:
                orientation:'horizontal'
                spacing:

                Label:
                    text:""
                    size_hint: 0.4, 1

                TextInput:
                    id:usernameInp
                    multiline:"False"
                    size_hint: 1, 0.3
                    hint_text:"Username:"
                    text:""
                    pos_hint:{"top":1}
                    font_size: 18

                Label:
                    text:""
                    size_hint: 0.4, 1

            BoxLayout:
                orientation:'horizontal'
                spacing:

                Label:
                    text:""
                    size_hint: 0.4, 1

                TextInput:
                    id:passwordInp
                    multiline:"False"
                    size_hint: 1, 0.3
                    hint_text:"Password:"
                    text:""
                    pos_hint:{"top":1}
                    font_size: 18
                    password: True

                Label:
                    text:""
                    size_hint: 0.4, 1

    
            BoxLayout:
                orientation:'horizontal'
                padding:10

                Label:
                    text:""
                
                Button:
                    text:'Login'
                    on_release: root.loginBtn()
                    pos_hint:{"top":1}
                    size_hint: 1, 0.6
                    background_normal: ""
                    background_color: rgba("#779CABff")

                Label:
                    text:""

